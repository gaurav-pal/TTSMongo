extends ../layout

block content    
    - var n = 0;
    -var tc = TeachersList.length
    .text-right
        a.btn.btn-primary.btn-sm(href="/search") 
            i.fas.fa-reply.fa-sm
            | Change Selection
    .pb-2.mt-2.mb-4.border-bottom
        if tc > 0
            h3 Good News !!! #[br] #[br] We have #{tc} teachers available for the selection
        else 
            h3 Sorry, We do not have any teacher available for your selection. #[br] #[br]
                | Please fill our #[a(href="/contact") contact us] form with details. We will try to arrange something for you. 
    br

    each tea in TeachersList
        if n%3 === 0
            <div class="row">        
        .col-4
            .card
                .card-header.text-center
                    h3.text-center #[b #{tea.Name}]
                .card-body
                    .text-center
                        if tea.Picture
                            img(src=tea.Picture)
                        else
                            img(src=tea.Gravatar)
                    hr
                    .row 
                        .col-6.text-left
                            h6 #[strong Gender:] #{tea.Gender}
                        .col-6.text-right
                            h6 #[strong Rate:] #{tea.Rate}/hr                        
                    .text-left
                        b Comment: 
                        | #{tea.SubjectComment}
                    .text-left
                        b About Teacher: 
                        | #{tea.About}
                .card-footer
                    form(action="/cart", method="post")
                        b Hours ? 
                        .input-group.qty-wrap
                            .input-group-prepend                             
                                span.qty-minus.input-group-text
                                    i.fa.fa-minus 
                            input.form-control(name="qty", type="text", value="1", aria-label="Small", aria-describedby="inputGroup-sizing-sm")
                            .input-group-append
                                span.qty-plus.input-group-text
                                    i.fa.fa-plus 
                        input(type="hidden", name="id", value="#{tea.id}")
                        input(type="hidden", name="nonce", value="blahblah")
                        button.btn.btn-primary(type="submit")
                            i.fa.fa-cart-plus      

 

        - n++
        if ((n%3 === 0) || (tc === n)) 
            </div>
            br
        
